@model NhaHang.Module.Orders.Areas.Orders.ViewModels.OrderDetailVm

@{
    ViewBag.Title = "Result";
    var localizedTextParts = Localizer["We received <a>your order</a>. Thank you!"].GetTextPartsFunction("<a>", "</a>");
}
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <title>Thông báo hoàn thành đơn hàng - NhaHang</title>
    <meta charset="utf-8" />
    <meta name="description" content="Thông báo hoàn thành đơn hàng - NhaHang" />
    <meta name="keywords" content="Thông báo hoàn thành đơn hàng - NhaHang" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="article" />
    <meta property="og:title" content="Thông báo hoàn thành đơn hàng - NhaHang" />
    <meta property="og:url" content="https://NhaHang.com/" />
    <meta property="og:site_name" content="Thông báo hoàn thành đơn hàng - NhaHang" />
    <link rel="shortcut icon" href="./media/logo/farico.ico" type="image/x-icon" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700" />
    <link href="/_content/NhaHang.Module.Core/assets/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
    <link href="/_content/NhaHang.Module.Core/assets/css/style.bundle.css" rel="stylesheet" type="text/css" />
    <script simpl-append-version="true" src="~/lib/angular/angular.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
</head>
<body id="kt_body" class="app-blank">
    <div class="d-flex flex-column flex-root" id="kt_app_root">
        <div class="d-flex flex-column flex-lg-row flex-column-fluid">
            <div class="d-flex flex-column flex-lg-row-fluid  min-w-lg-900px p-10 order-2 order-lg-1">
                <div class="mt-n1">
                    <div class="d-flex flex-stack pb-10">
                        <a href="~/">
                            <img alt="NhaHang" src="/media/logo/logo-ng.png" width="300" height="100">
                        </a>
                        <a href="~/" class="btn btn-lg btn-light-primary me-3">
                            <i class="ki-duotone ki-arrow-left fs-4 me-1"><span class="path1"></span><span class="path2"></span></i>
                            Tiếp tục mua hàng
                        </a>
                    </div>
                    <div class="d-print-none border border-dashed border-gray-300 card-rounded h-lg-100 min-w-md-350px p-9 bg-lighten">
                        <div class="alert alert-success d-flex align-items-center p-5">
                            <i class="ki-outline ki-check-circle text-success fs-5x"></i>
                            <div class="d-flex flex-column ps-10">
                                <h4 class="mb-1 text-dark">
                                    @localizedTextParts(0)<a href="~/user/orders/@Model.Id">@localizedTextParts(1)</a>@localizedTextParts(2)
                                </h4>
                                <span class="text-gray-700">
                                    Chúng tôi sẽ liên hệ cho bạn qua số điện thoại trong đơn hàng để xác nhận đơn hàng!<br />
                                    Một email xác nhận đã được gửi tới @Model.CustomerEmail<br />
                                    Xin vui lòng kiểm tra email của bạn
                                </span>
                            </div>
                        </div>
                        <div class="row g-5 mb-11">
                            <div class="col-sm-6">
                                <div class="fw-bolder fs-4 text-gray-800 mb-1">Thông tin mua hàng</div>
                                <div class="fw-bold fs-6 text-gray-700">Khách hàng: @Model.ShippingAddress.ContactName</div>
                                <div class="fw-semibold fs-6 text-gray-700">
                                    @Localizer["Phone"]: @Model.ShippingAddress.Phone
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="fw-bolder fs-4 text-gray-800 mb-1">Địa chỉ nhận hàng</div>
                                <div class="fw-semibold fs-7 text-gray-700">
                                    @Model.ShippingAddress.AddressLine1 <br />
                                    @Model.ShippingAddress.AddressLine2 <br />
                                </div>
                            </div>
                        </div>
                        <div class="row g-5 mb-12">
                            <div class="col-sm-6">
                                <div class="fw-bolder fs-4 text-gray-800 mb-1">Phương thức vận chuyển</div>
                                <div class="fw-semibold fs-7 text-gray-700">
                                    @if (Model.ShippingMethod == "Free")
                                    {
                                        <span>Miễn phí vận chuyển ( @Model.ShippingMethod)</span>
                                    } 
                                    else
                                    {
                                        <span>Phí vận chuyển theo khu vực ( @Model.ShippingMethod)</span>
                                    }
                                   
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="fw-bolder fs-4 text-gray-800 mb-1">Phương thức thanh toán</div>
                                <div class="fw-semibold fs-7 text-gray-700">
                                    @if (Model.PaymentMethod == "CashOnDelivery")
                                    {
                                        <span>Thanh toán khi giao hàng (COD) ( @Model.PaymentMethod)</span>
                                    }
                                    @if (Model.PaymentMethod == "Banking")
                                    {
                                        <span>Thanh toán chuyển khoản ngân hàng ( @Model.PaymentMethod)</span>
                                    }
                                    @if (Model.PaymentMethod == "Braintree")
                                    {
                                        <span>Thanh toán qua cổng Braintree ( @Model.PaymentMethod)</span>
                                    }
                                    @if (Model.PaymentMethod == "Cashfree")
                                    {
                                        <span>Thanh toán qua cổng Cashfree ( @Model.PaymentMethod)</span>
                                    }
                                    @if (Model.PaymentMethod == "MomoPayment")
                                    {
                                        <span>Thanh toán qua ví điện tử Momo ( @Model.PaymentMethod)</span>
                                    }
                                    @if (Model.PaymentMethod == "NganLuong")
                                    {
                                        <span>Thanh toán qua cổng NganLuong ( @Model.PaymentMethod)</span>
                                    }
                                    @if (Model.PaymentMethod == "PaypalExpress")
                                    {
                                        <span>Thanh toán qua cổng PaypalExpress ( @Model.PaymentMethod)</span>
                                    }
                                    @if (Model.PaymentMethod == "Stripe")
                                    {
                                        <span>PThanh toán qua cổng Stripe ( @Model.PaymentMethod)</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-lg-row-fluid bgi-size-cover min-w-lg-300px bgi-position-center order-1 order-lg-2" style="background-color: #fcfcfc">
                <div class="card card-flush h-xl-100 w-100 pe-20" style="background-color: #fcfcfc">
                    <div class="card-header pt-7">
                        <h3 class="card-title align-items-start flex-column">
                            <span class="card-label fw-bold text-dark"> Đơn hàng #@Model.Id</span>
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="scroll-y mh-300px my-5 px-8">
                            <div class="pe-6 me-n6">
                                @foreach (var item in Model.OrderItems)
                                {
                                    <div class="border border-dashed border-gray-300 rounded px-7 py-3 mb-6">
                                        <div class="d-flex align-items-center">
                                            <div class="d-flex align-items-center flex-grow-1">
                                                <div class="symbol symbol-75px me-5">
                                                    <img src="@item.ProductImage" alt="@item.ProductName">
                                                    <span class="symbol-badge badge badge-circle bg-primary start-100">@item.Quantity</span>
                                                </div>
                                                <div class="d-flex flex-column">
                                                    <a href="@item.ProductSlug" class="text-gray-900 text-hover-primary fs-6 fw-bold">@item.ProductName</a>
                                                </div>
                                            </div>
                                            <div class="my-0">
                                                <span class="text-gray-400 fw-bold">@item.ProductPriceString</span>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="pe-6 me-n6">
                            <label>Ghi chú</label>
                            <textarea name="note" type="text" class="form-control" value="@Model.OrderNote" disabled rows="2"></textarea>
                        </div>
                        <div class="pe-6 me-n6">
                            <div class="table-responsive">
                                <table class="table mb-0 fw-bold text-gray-700">
                                    <tbody>
                                        <tr class="border-top border-top-dashed align-top fs-6 fw-bold text-gray-700">
                                            <th class="total-line__name">
                                                @Localizer["Subtotal"]
                                            </th>
                                            <td class="text-end">@Model.SubtotalString</td>
                                        </tr>
                                        <tr class="border-top border-top-dashed align-top fs-6 fw-bold text-gray-700">
                                            <th class="total-line__name">
                                                @Localizer["Shipping"]
                                            </th>
                                            <td class="text-end" id="orderSummaryShipping">@Model.ShippingAmountString</td>
                                        </tr>
                                        <tr class="border-top border-top-dashed align-top fs-6 fw-bold text-gray-700">
                                            <td>@Localizer["Tax"]</td>
                                            <td colspan="2" id="orderSummaryTax" class="text-end">@Model.TaxAmountString</td>
                                        </tr>
                                        <tr class="border-top border-top-dashed align-top fs-6 fw-bold text-gray-700">
                                            <td>@Localizer["Discount"]</td>
                                            <td colspan="2" class="text-end">@Model.TaxAmountString</td>
                                        </tr>
                                        <tr class="border-top border-top-dashed align-top fs-6 fw-bold text-gray-700">
                                            <td>@Localizer["Payment Fee"]</td>
                                            <td colspan="2" class="text-end">@Model.PaymentFeeAmountString</td>
                                        </tr>
                                        <tr class="border-top border-top-dashed align-top fs-6 fw-bold text-gray-700">
                                            <td>@Localizer["Discount"]</td>
                                            <td colspan="2" class="text-end">@Model.PaymentFeeAmountString</td>
                                        </tr>
                                    </tbody>
                                    <tfoot>
                                        <tr class="align-top fw-bold text-gray-700">
                                            <th>
                                                <span class="fs-6 fw-bold text-gray-70">
                                                    @Localizer["Order Total"]
                                                </span>
                                            </th>
                                            <td class="text-end fs-4 text-nowrap">
                                                <span class="text-danger" id="orderTotal">@Model.OrderTotalString</span>
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <script src="/_content/NhaHang.Module.Core/assets/plugins/global/plugins.bundle.js"></script>
    <script src="/_content/NhaHang.Module.Core/assets/js/scripts.bundle.js"></script>
</body>
</html>

