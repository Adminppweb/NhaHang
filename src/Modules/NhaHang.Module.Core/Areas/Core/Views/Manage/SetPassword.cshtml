@model SetPasswordViewModel


@{
    ViewBag.Title = @Localizer["Set Password"];
}
@section additionalMeta {
    <meta name="keywords" content="@Localizer["Set Password"]">
    <meta name="description" content="@Localizer["Set Password"]">
    <meta property="og:title" content="@ViewBag.Title">
    <meta property="og:description" content="@Localizer["Set Password"]">
    <meta property="og:url" content="~/login">
    <meta property="og:image" content="~/media/logo/logo-ng.png ">
    <meta property="og:image:alt" content="@ViewBag.Title">
    <meta name="twitter:title" content="@ViewBag.Title">
    <meta name="twitter:description" content="@Localizer["Set Password"]">
    <meta name="twitter:title" content="@ViewBag.Title">
    <meta name="twitter:description" content="@Localizer["Set Password"]">
    <meta name="twitter:image" content="~/media/logo/logo-ng.png ">
    <meta name="twitter:url" content="~/login">
    <meta itemprop="name" content="@ViewBag.Title">
    <meta itemprop="description" content="@Localizer["Set Password"]">
    <meta itemprop="image" content="~/media/logo/logo-ng.png ">
    <meta itemprop="url" content="~/login">
    <link rel="canonical" href="~/login" />
    <link rel="image_src" href="~/media/logo/logo-ng.png " />
}
@section head {
    <link href="~/assets/css/account-style.css" rel="stylesheet" />
}
<section class="bread-crumb mb-3">
    <span class="crumb-border"></span>
    <div class="container">
        <div class="row">
            <div class="col-12 a-left">
                <ul class="breadcrumb m-0 px-0">
                    <li>
                        <a href="~/" target="_self"><span>Trang chủ</span></a>
                        <span class="mr_lr">&nbsp;/&nbsp;</span>
                    </li>

                    <li class="active">
                        <span><span>@Localizer["Set Password"]</span></span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="signup page_customer_account section">
    <div class="container card p-3">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-lg-3 col-left-ac">
                <div class="block-account">
                    <partial name="_AccountMenu" />
                    <ul>
                        <li><a class="title-info active" href="~/user">@Localizer["Account Dashboard"]</a></li>
                        <li><a class="title-info" href="~/user/info">@Localizer["Account Information"]</a></li>
                        <li><a class="title-info" href="~/user/change-password">@Localizer["Change Password"]</a></li>
                        <li><a class="title-info" href="~/user/address">Sổ địa chỉ</a></li>
                        <li><a class="title-info" href="~/user/orders">@Localizer["Order History"]</a></li>
                        <li><a class="title-info" href="~/user/wishlist">@Localizer["Wish List"]</a></li>
                        <li>
                            <form asp-area="Core" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm">
                                <button type="submit" class="btn btn_base">Đăng xuất</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-lg-9 col-right-ac">
                <h5 class="title-head margin-top-0">Đơn hàng của bạn</h5>
                <div class="col-xs-12 col-sm-12 col-lg-12 no-padding">
                    <div class="my-account">
                        <div class="d-flex flex-row mt-5">
                            <div class="flex-row-fluid ml-lg-8">
                                <div class="card border-0">
                                    <div class="card-header pb-0">
                                        <h3 class="card-title align-items-start flex-column">
                                            <span class="card-label font-weight-bolder text-dark">@Localizer["Set your password"]</span>
                                        </h3>
                                    </div>
                                    <div class="card-body py-5">
                                        <div class="form-group mb-8">
                                            <div class="alert alert-custom alert-default" role="alert">
                                                <div class="alert-icon"><i class="flaticon-warning text-primary"></i></div>
                                                <div class="alert-text">
                                                    @Localizer["You do not have a local username/password for this site. Add a local account so you can log in without an external login."]
                                                </div>
                                            </div>
                                        </div>
                                        <form asp-area="Core" asp-controller="Manage" asp-action="SetPassword" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                                            <div asp-validation-summary="All" class="text-danger"></div>
                                            <div class="form-group row">
                                                <label asp-for="NewPassword" class="col-md-3 col-form-label"></label>
                                                <div class="col-md-9">
                                                    <input asp-for="NewPassword" placeholder="@Localizer["New password"]" class="form-control form-control-solid" />
                                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label asp-for="ConfirmPassword" class="col-md-3 col-form-label"></label>
                                                <div class="col-md-9">
                                                    <input asp-for="ConfirmPassword" placeholder="@Localizer["Confirm new password"]" class="form-control form-control-solid" />
                                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="offset-md-3 col-md-9">
                                                    <button type="submit" class="btn btn-primary">@Localizer["Set password"]</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@section scripts {
    <partial name="_ValidationScriptsPartial" />
}
