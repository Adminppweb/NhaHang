@model ChangePasswordViewModel

@{
    ViewBag.Title = @Localizer["Change Password"];
}
@section additionalMeta {
    <meta name="keywords" content="@Localizer["Change Password"]">
    <meta name="description" content="@Localizer["Change Password"]">
    <meta property="og:title" content="@ViewBag.Title">
    <meta property="og:description" content="@Localizer["Change Password"]">
    <meta property="og:url" content="~/login">
    <meta property="og:image" content="~/media/logo/logo-ng.png ">
    <meta property="og:image:alt" content="@ViewBag.Title">
    <meta name="twitter:title" content="@ViewBag.Title">
    <meta name="twitter:description" content="@Localizer["Change Password"]">
    <meta name="twitter:title" content="@ViewBag.Title">
    <meta name="twitter:description" content="@Localizer["Change Password"]">
    <meta name="twitter:image" content="~/media/logo/logo-ng.png ">
    <meta name="twitter:url" content="~/login">
    <meta itemprop="name" content="@ViewBag.Title">
    <meta itemprop="description" content="@Localizer["Change Password"]">
    <meta itemprop="image" content="~/media/logo/logo-ng.png ">
    <meta itemprop="url" content="~/login">
    <link rel="canonical" href="~/login" />
    <link rel="image_src" href="~/media/logo/logo-ng.png " />
}
@section head {
    <link href="~/assets/css/account-style.css" rel="stylesheet" />
}

<section class="bread-crumb mb-3">
    <span class="crumb-border"></span>
    <div class="container">
        <div class="row">
            <div class="col-12 a-left">
                <ul class="breadcrumb m-0 px-0">
                    <li>
                        <a href="~/" target="_self"><span>Trang chủ</span></a>
                        <span class="mr_lr">&nbsp;/&nbsp;</span>
                    </li>
                    <li>
                        <a href="~/user" target="_self"><span>@Localizer["My Account"]</span></a>
                        <span class="mr_lr">&nbsp;/&nbsp;</span>
                    </li>

                    <li class="active">
                        <span><span>@Localizer["Change Password"]</span></span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="signup page_customer_account section">
    <div class="container card p-3">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-lg-3 col-left-ac">
                <div class="block-account">
                    <partial name="_AccountMenu" />
                    <ul>
                        <li><a class="title-info" href="~/user">@Localizer["Account Dashboard"]</a></li>
                        <li><a class="title-info" href="~/user/info">@Localizer["Account Information"]</a></li>
                        <li><a class="title-info active" href="~/user/change-password">@Localizer["Change Password"]</a></li>
                        <li><a class="title-info" href="~/user/address">Sổ địa chỉ</a></li>
                        <li><a class="title-info" href="~/user/orders">@Localizer["Order History"]</a></li>
                        <li><a class="title-info" href="~/user/wishlist">@Localizer["Wish List"]</a></li>
                        <li>
                            <form asp-area="Core" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm">
                                <button type="submit" class="btn btn_base">Đăng xuất</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-lg-9 col-right-ac">
                <h1 class="title-head margin-top-0">Đổi mật khẩu</h1>
                <div class="row">
                    <div class="col-md-6 col-12">
                        <div class="page-login">
                            <form asp-area="Core" asp-controller="Manage" asp-action="ChangePassword" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <p>
                                    Để đảm bảo tính bảo mật vui lòng đặt mật khẩu với ít nhất 8 kí tự
                                </p>
                                <div class="form-signup clearfix">
                                    <fieldset class="form-group">
                                        <label asp-for="OldPassword">Mật khẩu cũ <span class="error">*</span></label>
                                        <input asp-for="OldPassword" placeholder="@Localizer["Current password"]" class="form-control form-control-lg" />
                                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                                    </fieldset>
                                    <fieldset class="form-group">
                                        <label asp-for="NewPassword">Mật khẩu mới <span class="error">*</span></label>
                                        <input asp-for="NewPassword" placeholder="@Localizer["New password"]" class="form-control form-control-lg" />
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </fieldset>
                                    <fieldset class="form-group">
                                        <label asp-for="ConfirmPassword">Xác nhận lại mật khẩu <span class="error">*</span></label>
                                        <input asp-for="ConfirmPassword" placeholder="@Localizer["Confirm new password"]" class="form-control form-control-lg" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </fieldset>
                                    <button type="submit" class="button mt-2 btn-edit-addr btn btn-primary btn-more">
                                        <i class="hoverButton"></i>Đặt lại mật khẩu
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}
