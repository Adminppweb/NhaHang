@model ExternalLoginConfirmationViewModel

@{
	ViewBag.Title = "Liên kết tài khoản";
}
@section additionalMeta {
	<meta name="keywords" content="Liên kết tài khoản">
	<meta name="description" content="Liên kết tài khoản">
	<meta property="og:title" content="@ViewBag.Title">
	<meta property="og:description" content="Liên kết tài khoản">
	<meta property="og:url" content="~/login">
	<meta property="og:image" content="~/media/logo/logo-ac.png ">
	<meta property="og:image:alt" content="@ViewBag.Title">
	<meta name="twitter:title" content="@ViewBag.Title">
	<meta name="twitter:description" content="Liên kết tài khoản">
	<meta name="twitter:title" content="@ViewBag.Title">
	<meta name="twitter:description" content="Liên kết tài khoản">
	<meta name="twitter:image" content="~/media/logo/logo-ac.png ">
	<meta name="twitter:url" content="~/login">
	<meta itemprop="name" content="@ViewBag.Title">
	<meta itemprop="description" content="Liên kết tài khoản">
	<meta itemprop="image" content="~/media/logo/logo-ac.png ">
	<meta itemprop="url" content="~/login">
	<link rel="canonical" href="~/login" />
	<link rel="image_src" href="~/media/logo/logo-ac.png " />
}
@section head {
	<link href="~/assets/css/account-style.css" rel="stylesheet" />
}
<section class="bread-crumb mb-3">
	<span class="crumb-border"></span>
	<div class="container">
		<div class="row">
			<div class="col-12 a-left">
				<ul class="breadcrumb m-0 px-0">
					<li>
						<a href="~/" target="_self"><span>Trang chủ</span></a>
						<span class="mr_lr">&nbsp;/&nbsp;</span>
					</li>
					<li class="active">
						<span>Liên kết tài khoản @ViewData["LoginProvider"]</span>
					</li>
				</ul>
			</div>
		</div>
	</div>
</section>
<section class="section">
	<div class="container margin-bottom-20 card py-20">
		<div class="wrap_background_aside margin-bottom-40 page_login">
			<div class="heading-bar text-center">
				<h1 class="title_page mb-0">Liên kết tài khoản @ViewData["LoginProvider"] của bạn.</h1>
			</div>
			<div class="row">
				<div class="col-12 col-md-6 col-lg-5 offset-md-3 py-3 mx-auto">
					<div class="page-login ">
						<form asp-area="Core" asp-controller="Account" asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
							<div class="form-signup margin-bottom-15" style="color:red;">
								<div asp-validation-summary="All"></div>
							</div>
							<div class="form-signup margin-bottom-15" style="color:green;">
								Bạn đã xác thực thành công bằng <strong>@ViewData["LoginProvider"]</strong>.
								Vui lòng nhập địa chỉ email cho trang web này bên dưới và nhấp vào nút Đăng ký để hoàn tất
								đăng nhập.
							</div>
							<div class="form-signup clearfix">
								<fieldset class="form-group">
									<label>Email <span class="required">*</span> </label>
									<input asp-for="Email" placeholder="@Localizer["Email"]" class="form-control" />
									<span asp-validation-for="Email" class="text-danger"></span>
								</fieldset>
								<fieldset class="form-group">
									<label>Mật khẩu <span class="required">*</span> </label>
									<input asp-for="FullName" class="form-control" />
									<span asp-validation-for="FullName" class="text-danger"></span>
								</fieldset>
								<div class="pull-xs-left button_bottom a-center  mb-3">
									<button class="btn btn-block btn-style  btn-login" type="submit">Đăng nhập</button>
								</div>
							</div>

						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

@section scripts {
	<partial name="_ValidationScriptsPartial" />
}
